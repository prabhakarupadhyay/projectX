  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/prabhakarupadhyay/projectX"
  },   
  "private": true,
  "scripts": {
    "deploy": "gcloud app deploy",
    "start": "node server.js",
    "lint": "samples lint",
    "pretest": "npm run lint",
    "unit-test": "ava --verbose test/*.test.js",
    "system-test": "samples test app",
    "test": "npm run unit-test && npm run system-test",
    "e2e-test": "samples test deploy"
  }, 
  "author": "prabhakar marshall",
  "license": "ISC",
  
  "dependencies": {
    "express": "*",
    "request": "*",
    "firebase-admin": "*",
    "morgan": "*",
    "express-session": "~1.15.2",
    "connect-memcached": "~0.2.0",
    "body-parser": "*",
    "cookie-parser": "*",
    "serve-favicon": "*",
    "passport": "*",
    "passport-google-oauth2": "*",
    "mime": "*",
    "path": "*",
    "mysql": "*",
    "cheerio": "*",
    "shortid": "*",
    "multer": "*",
    "googleapis": "*",
    "passport-oauth2-refresh": "*",
    "@google-cloud/datastore": "*",
    "@google-cloud/storage": "*",
    "@google-cloud/trace-agent": "*",
    "@google-cloud/debug-agent": "*"
  },
   "devDependencies": {
    "@google-cloud/nodejs-repo-tools": "1.4.15",
    "ava": "0.19.1"
  },
    
  "engines": {
    "node": ">=4.3.2"
  },
    
  "cloud-repo-tools": {
    "test": {
      "app": {
        "requiredEnvVars": [
          "CLOUD_BUCKET",
          "PROJECT_ID",
          "SQL_CLIENT",
          "SQL_USER",
          "SQL_PASSWORD",
          "SQL_DATABASE",
          "INSTANCE_CONNECTION_NAME",
          "MEMCACHE_URL"
        ],
        "msg": "Last 10 visits:",
        "substitutions": "YOUR_SQL_CLIENT=$SQL_CLIENT,YOUR_USER=$SQL_USER,YOUR_PASSWORD=$SQL_PASSWORD,YOUR_DATABASE=$SQL_DATABASE,YOUR_INSTANCE_CONNECTION_NAME=$INSTANCE_CONNECTION_NAME",
        "args": [
          "server.js"
        ]
      }
    }
  }     
    
}
